<head>
  <title>Autenticação do Usuário</title>
  <meta name="viewport" content="width=device-width">
  <meta charset="UTF-8">
  <!--build:css css/auth.min.css -->
  <link rel="stylesheet" href="vendor/bootstrap/dist/css/bootstrap.css">
  <link rel="stylesheet" href="vendor/bootstrap/dist/css/bootstrap-theme.css">
  <!--endbuild -->
</head>

  <body>
    <div class="col-sm-8 col-sm-offset-2">
      <div class="jumbotron text-center">
        <h1><span class="fa fa-sign-in"></span> Criar Login</h1>

        <% if (message != null) { %>
          <div class="alert-danger"><%= message %></div>
        <% } %>

        <form action="/signup" method="post">
          <div class="form-group">
              <label>Nome</label>
              <input type="text" class="form-control" name="nome">
          </div>
          <div class="form-group">
              <label>Email</label>
              <input type="text" class="form-control" name="login">
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" />
          </div>
          <div>
            <input type="submit" class="form-control" value="Submit" />
          </div>
        </form>
      </div>
      <hr>
      <span class="fa fa-sign-in"> Já possue um login?<a href="/login"> Login</a></span>
      <p>Vá para <a href="/">Inicio</a>.</p>
    </div>
  </body>
</html>
